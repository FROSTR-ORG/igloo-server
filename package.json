  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.7",
    "dotenv": "^16.4.5",
    "tslib": "^2.8.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "express": "^4.21.1",
    "nostr-tools": "^2.9.4",
    "zod": "^3.23.8"
