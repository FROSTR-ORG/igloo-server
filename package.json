{
  "name": "igloo-server",
  "version": "0.1.7",
  "scripts": {
    "start": "bun run src/server.ts",
    "build:css": "cd frontend && bunx tailwindcss -i ./styles.css -o ../static/styles.css --watch",
    "build:css:prod": "cd frontend && bunx tailwindcss -i ./styles.css -o ../static/styles.css --minify",
    "build:js": "esbuild frontend/index.tsx --bundle --outfile=static/app.js --jsx=automatic",
    "build:js:prod": "NODE_ENV=production esbuild frontend/index.tsx --bundle --outfile=static/app.js --jsx=automatic --minify --tree-shaking --define:process.env.NODE_ENV='\"production\"'",
    "build": "bun run build:js:prod && bun run build:css:prod",
    "build:dev": "bun run build:js && cd frontend && bunx tailwindcss -i ./styles.css -o ../static/styles.css",
    "dev": "concurrently \"bun run build:css\" \"bun run build:js -- --watch\"",
    "docs:validate": "bunx redocly lint docs/openapi.yaml",
    "docs:bundle": "bunx redocly bundle docs/openapi.yaml --output docs/openapi.json",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "dependencies": {
    "@cmdcode/buff": "^2.2.5",
    "@frostr/bifrost": "^1.0.6",
    "@frostr/igloo-core": "^0.1.3",
    "@noble/ciphers": "^1.2.1",
    "@noble/curves": "^1.8.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.523.0",
    "nostr-tools": "^2.15.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@redocly/cli": "^1.25.9",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.2",
    "@types/yaml": "^1.9.7",
    "bun-types": "latest",
    "esbuild": "^0.24.2",
    "concurrently": "^9.1.0",
    "tailwindcss-animate": "^1.0.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
