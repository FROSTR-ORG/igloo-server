{
  "name": "@frostr/permafrost",
  "version": "0.0.1",
  "description": "Remote signing server for the FROSTR protocol.",
  "author": "Christopher Scott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frostr-org/permafrost"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
